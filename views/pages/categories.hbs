{{#> layout }}
  {{#*inline "pageContent"}}
    <section class="content-section">
      <h1 class="text-center">Категорії</h1>
    </section>

    <section class="content-section p-2 my-2">
      <div class="container-fluid">

        <div class="row mb-2">
          <div class="col-3">
            <label for="categoryID" class="form-label">Номер категорії</label>
            <input type="text" class="form-control" placeholder="Номер категорії" id="categoryID">
          </div>

          <div class="col-3">
            <label for="searchByText" class="form-label">Пошук за текстом</label>
            <input type="text" class="form-control" placeholder="Текст" id="searchByText">
          </div>

          <div class="col-3">
            <label for="sortBy" class="form-label">Сортувати за</label>
            <select name="sortBy" id="sortBy" class="form-select">
              <option value="category_number">Номером категорії</option>
              <option value="category_name">Назвою категорії</option>
            </select>
          </div>

          <div class="col-3">
            <label for="orderBy" class="form-label">Порядок</label>
            <select name="orderBy" id="orderBy" class="form-select">
              <option value="ascending">За зростанням</option>
              <option value="descending">За спаданням</option>
            </select>
          </div>
        </div>

        <div class="row">

          <div class="col-12">
            <div class="btn-group w-100" role="group" aria-label="Actions">
              <button class="btn btn-primary w-75">
                Пошук
              </button>
              <button type="button" class="btn btn-outline-primary">
                Додати категорію
              </button>
            </div>
          </div>
        </div>

      </div>
    </section>

    <section class="content-section p-2 my-2">

      <div class="mb-2 mt-1">
        <span class="h4">Всього: </span>
        <span class="h4">4</span>
      </div>

      <div class="table-container">
        <table class="m-0 table table-striped table-hover table-bordered">
          <thead>
          <tr>
            <th>#</th>
            <th>Номер категорії</th>
            <th>Назва категорії</th>
            <th>Дії</th>
          </tr>
          </thead>

          <tbody class="table-group-divider">
          <tr>
            <td>1</td>
            <td>1</td>
            <td>Vegetables and Fruits</td>
            <td>
              <button class="btn btn-primary"><i class="fa-solid fa-info"></i></button>
              <button class="btn btn-warning"><i class="fa-solid fa-pen-to-square"></i></button>
              <button class="btn btn-danger"><i class="fa-solid fa-trash"></i></button>
            </td>
          </tr>
          <tr>
            <td>2</td>
            <td>2</td>
            <td>Meat and Poultry</td>
            <td>
              <button class="btn btn-primary"><i class="fa-solid fa-info"></i></button>
              <button class="btn btn-warning"><i class="fa-solid fa-pen-to-square"></i></button>
              <button class="btn btn-danger"><i class="fa-solid fa-trash"></i></button>
            </td>
          </tr>
          <tr>
            <td>3</td>
            <td>3</td>
            <td>Dairy Products</td>
            <td>
              <button class="btn btn-primary"><i class="fa-solid fa-info"></i></button>
              <button class="btn btn-warning"><i class="fa-solid fa-pen-to-square"></i></button>
              <button class="btn btn-danger"><i class="fa-solid fa-trash"></i></button>
            </td>
          </tr>
          <tr>
            <td>4</td>
            <td>5</td>
            <td>Confectionery Products</td>
            <td>
              <button class="btn btn-primary"><i class="fa-solid fa-info"></i></button>
              <button class="btn btn-warning"><i class="fa-solid fa-pen-to-square"></i></button>
              <button class="btn btn-danger"><i class="fa-solid fa-trash"></i></button>
            </td>
          </tr>
          </tbody>
        </table>
      </div>

      <div class="mt-3">
        <nav aria-label="Page navigation">
          <ul class="pagination justify-content-center">
            <li class="page-item disabled">
              <a class="page-link">Минула</a>
            </li>
            <li class="page-item active" aria-current="page">
              <a class="page-link" href="#">1</a>
            </li>
            <li class="page-item"><a class="page-link" href="#">2</a></li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item">
              <a class="page-link" href="#">Наступна</a>
            </li>
          </ul>
        </nav>
      </div>

    </section>

  {{/inline}}
{{/layout}}