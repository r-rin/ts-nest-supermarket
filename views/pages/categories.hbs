{{#> layout }}
  {{#*inline "pageContent"}}
    <section class="content-section">
      <h1 class="text-center">Категорії</h1>
    </section>

    <section class="content-section p-2 my-2">
      <div class="container-fluid">

        <div class="row mb-2">
          <div class="col-3">
            <label for="categoryID" class="form-label">Номер категорії</label>
            <input type="text" class="form-control" placeholder="Номер категорії" id="categoryID">
          </div>

          <div class="col-3">
            <label for="searchByText" class="form-label">Пошук за текстом</label>
            <input type="text" class="form-control" placeholder="Текст" id="searchByText">
          </div>

          <div class="col-3">
            <label for="sortBy" class="form-label">Сортувати за</label>
            <select name="sortBy" id="sortBy" class="form-select">
              <option value="category_number">Номером категорії</option>
              <option value="category_name">Назвою категорії</option>
            </select>
          </div>

          <div class="col-3">
            <label for="orderBy" class="form-label">Порядок</label>
            <select name="orderBy" id="orderBy" class="form-select">
              <option value="ascending">За зростанням</option>
              <option value="descending">За спаданням</option>
            </select>
          </div>
        </div>

        <div class="row">

          <div class="col-12">
            <div class="btn-group w-100" role="group" aria-label="Actions">
              <button class="btn btn-primary w-75">
                Пошук
              </button>
              <button type="button" class="btn btn-outline-primary" id="addCategoryBtn">
                Додати категорію
              </button>
            </div>
          </div>
        </div>

      </div>
    </section>

    <section class="content-section p-2 my-2">

      <div class="mb-2 mt-1">
        <span class="h4">Всього категорій: </span>
        <span class="h4" id="rows-amount">
          <span class="fst-italic text-muted text-center">Завантаження</span>
        </span>
      </div>

      <div class="table-container">
        <table class="m-0 table table-striped table-hover table-bordered" id="data-table">
          <thead>
          <tr>
            <th>#</th>
            <th>Номер категорії</th>
            <th>Назва категорії</th>
            <th>Дії</th>
          </tr>
          </thead>

          <tbody class="table-group-divider">
          <tr>
            <td colspan="8">{{> partials/loading}}</td>
          </tr>
          <tr>
            <td colspan="8">{{> partials/loading}}</td>
          </tr>
          <tr>
            <td colspan="8">{{> partials/loading}}</td>
          </tr>
          <tr>
            <td colspan="8">{{> partials/loading}}</td>
          </tr>
          <tr>
            <td colspan="8">{{> partials/loading}}</td>
          </tr>
          <tr>
            <td colspan="8">{{> partials/loading}}</td>
          </tr>
          </tbody>
        </table>
      </div>

      <div class="mt-3">
        <nav aria-label="Page navigation">
          <ul class="pagination justify-content-center">
            <li class="page-item disabled">
              <a class="page-link">Минула</a>
            </li>
            <li class="page-item active" aria-current="page">
              <a class="page-link">1</a>
            </li>
            <li class="page-item"><a class="page-link">2</a></li>
            <li class="page-item"><a class="page-link">3</a></li>
            <li class="page-item">
              <a class="page-link">Наступна</a>
            </li>
          </ul>
        </nav>
      </div>

      <div class="row">
        <div class="col text-end">
          <button type="button" class="btn btn-outline-success w-25">
            Надрукувати звіт
          </button>
        </div>
      </div>

    </section>

  {{/inline}}
{{/layout}}