{{#> layout }}
  {{#*inline "pageContent"}}
    <section class="content-section mb-4">
      <h1 class="text-center">Редагування інформації про предмет</h1>
    </section>

    <section class="d-flex justify-content-center flex-column align-items-center h-75">
      <section class="content-section p-3 my-2 mt-5" style="width: 500px;">

        <form id="editProductForm" action="/submit-edited-product" method="POST">

          <div class="row mb-3">
            <div class="col">
              <label for="productId" class="form-label text-center">ID товару</label>
              <span style="color: red">*</span>
              <input type="number" class="form-control text-center" id="productId"
                     name="productId" min="1" step="1" value="{{product.product_id}}" required>
            </div>

            <div class="col">
              <label for="categoryName" class="form-label text-center">Категорія</label>
              <span style="color: red">*</span>
              <select class="form-select text-center" id="categoryName" name="categoryName" required>
                <option value="Овочі та фрукти">Овочі та фрукти</option>
                <option value="М'ясо та птиця">М'ясо та птиця</option>
                <option value="Молочні продукти">Молочні продукти</option>
                <option value="Хлібобулочні вироби">Хлібобулочні вироби</option>
                <option value="Кондитерські вироби">Заморожені продукти</option>
                <option value="Напої">Напої</option>
              </select>
            </div>

          </div>

          <div class="row mb-3">
            <div class="col">
              <label for="productName" class="form-label text-center">Назва товару</label>
              <span style="color: red">*</span>
              <input type="text" class="form-control text-center" id="productName"
                     name="productName" value="{{product.product_name}}" required>
            </div>
          </div>

          <div class="row mb-3">
            <div class="col">
              <label for="characteristics" class="form-label text-center">Характеристики</label>
              <span style="color: red">*</span>
              <textarea class="form-control text-center" id="characteristics"
                        name="characteristics" rows="4" required>{{product.characteristics}}</textarea>
            </div>
          </div>

          <div class="row">
            <div class="btn-group w-100" role="group" aria-label="Actions">
              <button type="reset" class="btn btn-outline-secondary w-50">
                Скасувати
              </button>

              <button type="submit" class="btn btn-primary w-50">
                Зберегти зміни
              </button>
            </div>
          </div>

        </form>

      </section>
    </section>
  {{/inline}}
{{/layout}}
