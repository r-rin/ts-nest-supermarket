    <section class="content-section p-2 my-2">
      <div class="container-fluid">

        <div class="row mb-2">
          <div class="col-2">
            <label for="employeeId" class="form-label">ID працівника</label>
            <input type="text" class="form-control" placeholder="ID працівника" id="employeeId">
          </div>

          <div class="col-2">
            <label for="searchByText" class="form-label">Пошук за текстом</label>
            <input type="text" class="form-control" placeholder="Текст" id="searchByText">
          </div>

          <div class="col-2">
            <label for="employeeRole" class="form-label">Роль</label>
            <select name="employeeRole" id="employeeRole" class="form-select">
              <option value="all">Усі</option>
              <option value="admin">Адміністратор</option>
              <option value="manager">Менеджер</option>
              <option value="cashier">Касир</option>
            </select>
          </div>

          <div class="col-2">
            <label for="employeeCity" class="form-label">Місто</label>
            <select name="employeeCity" id="employeeCity" class="form-select">
              <option value="all">Усі</option>
              <option value="LosAngeles">Los Angeles</option>
              <option value="Houston">Houston</option>
              <option value="Seattle">Seattle</option>
              <option value="Chicago">Chicago</option>
            </select>
          </div>

          <div class="col-2">
            <label for="sortBy" class="form-label">Сортувати за</label>
            <select name="sortBy" id="sortBy" class="form-select">
              <option value="employee_surname">Прізвищем</option>
              <option value="employee_name">Ім'ям</option>
              <option value="employee_role">Роллю</option>
              <option value="employee_salary">Зарплатою</option>
              <option value="employee_start_date">Датою початку роботи</option>
              <option value="employee_birth_date">Датою народження</option>
              <option value="employee_city">Містом</option>
            </select>
          </div>

          <div class="col-2">
            <label for="orderBy" class="form-label">Порядок</label>
            <select name="orderBy" id="orderBy" class="form-select">
              <option value="ascending">За зростанням</option>
              <option value="descending">За спаданням</option>
            </select>
          </div>
        </div>

        <div class="row">

          <div class="col-12">
            <div class="btn-group w-100" role="group" aria-label="Actions">
              <button class="btn btn-primary w-75">
                Пошук
              </button>
              <button type="button" class="btn btn-outline-primary" id="addEmployeeBtn">
                Додати працівника
              </button>
            </div>
          </div>
        </div>

      </div>
