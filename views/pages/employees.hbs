{{#> layout }}
  {{#*inline "pageContent"}}
    <section class="content-section">
      <h1 class="text-center">Працівники</h1>
    </section>

    <section class="content-section p-2 my-2">
      <div class="container-fluid">

        <div class="row mb-2">
          <div class="col-2">
            <label for="employeeId" class="form-label">ID працівника</label>
            <input type="text" class="form-control" placeholder="ID працівника" id="employeeId">
          </div>

          <div class="col-2">
            <label for="searchByText" class="form-label">Пошук за текстом</label>
            <input type="text" class="form-control" placeholder="Текст" id="searchByText">
          </div>

          <div class="col-2">
            <label for="employeeRole" class="form-label">Роль</label>
            <select name="employeeRole" id="employeeRole" class="form-select">
              <option value="all">Усі</option>
              {{#each rolesDict}}
                <option value="{{@index}}">{{this.[1]}}</option>
              {{/each}}
            </select>
          </div>

          <div class="col-2">
            <label for="employeeCity" class="form-label">Місто</label>
            <select name="employeeCity" id="employeeCity" class="form-select">
              <option value="all">Усі</option>
              {{#each citiesArr}}
                <option value="{{this.employee_city}}">{{this.employee_city}}</option>
              {{/each}}
            </select>
          </div>

          <div class="col-2">
            <label for="sortBy" class="form-label">Сортувати за</label>
            <select name="sortBy" id="sortBy" class="form-select">
              <option value="none">Не сортувати</option>
              <option value="employee_surname">Прізвищем</option>
              <option value="employee_name">Ім'ям</option>
              <option value="employee_role">Роллю</option>
              <option value="employee_salary">Зарплатою</option>
              <option value="employee_start_date">Датою початку роботи</option>
              <option value="employee_birth_date">Датою народження</option>
              <option value="employee_city">Містом</option>
            </select>
          </div>

          <div class="col-2">
            <label for="orderBy" class="form-label">Порядок</label>
            <select name="orderBy" id="orderBy" class="form-select">
              <option value="ASC">За зростанням</option>
              <option value="DESC">За спаданням</option>
            </select>
          </div>
        </div>

        <div class="row">

          <div class="col-12">
            <div class="btn-group w-100" role="group" aria-label="Actions">
              <button class="btn btn-primary w-75" id="search">
                Пошук
              </button>
              <button type="button" class="btn btn-outline-primary" id="addEmployeeBtn">
                Додати працівника
              </button>
            </div>
          </div>
        </div>

      </div>
    </section>

    <section class="content-section p-2 my-2">

      <div class="mb-2 mt-1">
        <span class="h4">Всього працівників: </span>
        <span class="h4" id="rows-amount">
          <span class="fst-italic text-muted text-center">Завантаження</span>
        </span>
      </div>

      <div class="table-container">
        <table id="data-table" class="m-0 table table-striped table-hover table-bordered">
          <thead>
          <tr>
            <th>#</th>
            <th>ID працівника</th>
            <th>Прізвище</th>
            <th>Ім'я</th>
            <th>Роль</th>
            <th>Зарплата</th>
            <th>Дата початку роботи</th>
            <th>Дата народження</th>
            <th>Місто</th>
            <th>Дії</th>
          </tr>
          </thead>

          <tbody class="table-group-divider">
          <tr>
            <td colspan="8">{{> partials/loading}}</td>
          </tr>
          <tr>
            <td colspan="8">{{> partials/loading}}</td>
          </tr>
          <tr>
            <td colspan="8">{{> partials/loading}}</td>
          </tr>
          <tr>
            <td colspan="8">{{> partials/loading}}</td>
          </tr>
          <tr>
            <td colspan="8">{{> partials/loading}}</td>
          </tr>
          <tr>
            <td colspan="8">{{> partials/loading}}</td>
          </tr>
          <tr>
            <td colspan="8">{{> partials/loading}}</td>
          </tr>
          <tr>
            <td colspan="8">{{> partials/loading}}</td>
          </tr>
          <tr>
            <td colspan="8">{{> partials/loading}}</td>
          </tr>
          <tr>
            <td colspan="8">{{> partials/loading}}</td>
          </tr>
          </tbody>
        </table>
      </div>

      <div class="mt-3">
        <nav aria-label="Page navigation">
          <ul class="pagination justify-content-center">
            <li class="page-item disabled">
              <a class="page-link">Минула</a>
            </li>
            <li class="page-item active" aria-current="page">
              <a class="page-link" href="#">1</a>
            </li>
            <li class="page-item"><a class="page-link" href="#">2</a></li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item">
              <a class="page-link" href="#">Наступна</a>
            </li>
          </ul>
        </nav>
      </div>

      <div class="row">
        <div class="col text-end">
          <button id="print-button" type="button" class="btn btn-outline-success w-25">
            Надрукувати звіт
          </button>
        </div>
      </div>

    </section>

    <section id="content-to-print">
      <table class="m-0 table table-striped table-hover table-bordered">
      <thead>
      <tr>
        <th>#</th>
        <th>ID працівника</th>
        <th>Прізвище</th>
        <th>Ім'я</th>
        <th>По-батькові</th>
        <th>Роль</th>
        <th>Зарплата</th>
        <th>Дата початку роботи</th>
        <th>Дата народження</th>
        <th>Телефон</th>
        <th>Місто</th>
        <th>Вулиця</th>
        <th>Поштовий індекс</th>
      </tr>
      </thead>
      <tbody id="table-to-print">

      </tbody>
      </table>

    </section>

  {{/inline}}
{{/layout}}