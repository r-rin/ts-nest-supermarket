{{#> layout }}
  {{#*inline "pageContent"}}
    <section class="d-flex justify-content-center flex-column align-items-center h-100">

    {{#ifEquals category null}}
        <section class="content-section" style="width: 700px;">
          <h1 class="text-center m-3">Таку категорію не знайдено</h1>
        </section>
    {{else}}
      <section class="content-section p-3 my-2" style="width: 500px;">
        <section id="content-to-print">

        <div class="row mb-3">
          <div class="col">
            <strong>Номер категорії:</strong>
            <span>{{category.category_number}}</span>
          </div>
        </div>

        <div class="row mb-3">
          <div class="col">
            <strong>Назва категорії:</strong>
            <span>{{category.category_name}}</span>
          </div>
        </div>
        </section>
        <div class="row">
          <div class="col">
            <button id="print-button" type="button" class="btn btn-primary w-100">
              Надрукувати звіт
            </button>
          </div>
        </div>

      </section>
      {{/ifEquals}}

    </section>
  {{/inline}}
{{/layout}}
