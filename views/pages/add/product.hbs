{{#> layout }}
  {{#*inline "pageContent"}}
    <section class="content-section mb-4">
      <h1 class="text-center">Додавання предметів</h1>
    </section>

    <section class="d-flex justify-content-center flex-column align-items-center h-75">
      <section class="content-section p-3 my-2 mt-5" style="width: 500px;">

        <form id="addProductForm">

          <div class="row mb-3">
            <div class="col">
              <label for="productId" class="form-label text-center">ID товару</label>
              <span style="color: red">*</span>
              <input type="number" class="form-control text-center" placeholder="Наприклад: 1" id="productId"
                     name="product_id" min="1" step="1" required>
            </div>

            <div class="col">
              <label for="categoryName" class="form-label text-center">Категорія</label>
              <span style="color: red">*</span>
              <select class="form-select text-center" id="categoryName" name="category_number" required>
                {{#each categoriesDict}}
                  <option value="{{this.[0]}}">{{this.[1]}}</option>
                {{/each}}
              </select>
            </div>

          </div>

          <div class="row mb-3">
            <div class="col">
              <label for="productName" class="form-label text-center">Назва товару</label>
              <span style="color: red">*</span>
              <input type="text" class="form-control text-center" placeholder="Назва товару" id="productName"
                     name="product_name" minlength="3" maxlength="50" required>
            </div>
          </div>

          <div class="row mb-3">
            <div class="col">
              <label for="characteristics" class="form-label text-center">Характеристики</label>
              <span style="color: red">*</span>
              <textarea class="form-control text-center" placeholder="Характеристики" id="characteristics"
                        name="characteristics" rows="4" maxlength="100" required></textarea>
            </div>
          </div>

          <div class="row">
            <div class="btn-group w-100" role="group" aria-label="Actions">
              <button type="reset" class="btn btn-outline-secondary w-50">
                Очистити
              </button>

              <button type="submit" class="btn btn-primary w-50">
                Додати предмет
              </button>
            </div>
          </div>

        </form>

      </section>
    </section>

    <div class="modal fade" id="infoModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
         aria-labelledby="staticBackdropLabel" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-header">
            <h1 class="modal-title fs-5" id="infoModalTitle">...</h1>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body" id="infoModalBody">
            ...
          </div>
        </div>
      </div>
    </div>
  {{/inline}}
{{/layout}}
