              <option value="vegetables_fruits">Овочі та фрукти</option>
              <option value="meat_poultry">М'ясо і птиця</option>
              <option value="dairy_products">Молочні продукти</option>
              <option value="pastry">Кондитерські вироби</option>
            </select>
          </div>

          <div class="col-3">
            <label for="sortBy" class="form-label">Сортувати за</label>
            <select name="sortBy" id="sortBy" class="form-select">
              <option value="product_id">ID</option>
              <option value="category_number">Номером категорії</option>
              <option value="product_name">Назвою</option>
            </select>
          </div>

          <div class="col-3">
            <label for="orderBy" class="form-label">Порядок</label>
            <select name="orderBy" id="orderBy" class="form-select">
              <option value="ascending">За зростанням</option>
              <option value="descending">За спаданням</option>
            </select>
          </div>
        </div>

        <div class="row">

          <div class="col-12">
            <div class="btn-group w-100" role="group" aria-label="Actions">
              <button class="btn btn-primary w-75">
                Пошук
              </button>
              <button type="button" class="btn btn-outline-primary">
                Додати предмет
