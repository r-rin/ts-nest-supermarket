{{#> layout }}
  {{#*inline "pageContent"}}
    <section class="content-section mb-2">
      <h1 class="text-center">Товари</h1>
    </section>

    <section class="content-section p-2 my-2">
      <div class="container-fluid">

        <div class="row mb-2">
          <div class="col-3">
            <label for="supplyUPC" class="form-label">UPC товару</label>
            <input type="text" class="form-control" placeholder="UPC товару" id="supplyUPC">
          </div>

          <div class="col-3">
            <label for="searchByText" class="form-label">Пошук за текстом</label>
            <input type="text" class="form-control" placeholder="Текст" id="searchByText">
          </div>

          <div class="col-2">
            <label for="supplyType" class="form-label">Тип</label>
            <select name="supplyType" id="supplyType" class="form-select">
              <option value="all">Усі</option>
              <option value="default">Звичайні</option>
              <option value="promotional">Акційні</option>
            </select>
          </div>

          <div class="col-2">
            <label for="sortBy" class="form-label">Сортувати за</label>
            <select name="sortBy" id="sortBy" class="form-select">
              <option value="none">Не сортувати</option>
              <option value="selling_price">Ціною</option>
              <option value="Product.product_name">Назвою продукту</option>
              <option value="products_amount">Кількістю</option>
              <option value="manufacturing_date">Датою виготовлення</option>
              <option value="expiration_date">Терміном придатності</option>
            </select>
          </div>

          <div class="col-2">
            <label for="orderBy" class="form-label">Порядок</label>
            <select name="orderBy" id="orderBy" class="form-select">
              <option value="ASC">За зростанням</option>
              <option value="DESC">За спаданням</option>
            </select>
          </div>
        </div>

        <div class="row">

          <div class="col-12">
            <div class="btn-group w-100" role="group" aria-label="Actions">
              <button class="btn btn-primary w-75" id="search">
                Пошук
              </button>
              <button type="button" class="btn btn-outline-primary" id="addSupplyBtn">
                Додати товар
              </button>
            </div>
          </div>
        </div>

      </div>
    </section>

    <section class="content-section p-2 my-2">

      <div class="mb-2 mt-1">
        <span class="h4">Всього елементів: </span>
        <span class="h4" id="rows-amount">
          <span class="fst-italic text-muted text-center">Завантаження</span>
        </span>
      </div>

      <div class="table-container">
        <table class="m-0 table table-striped table-hover table-bordered" id="data-table">
          <thead>
            <tr>
              <th>#</th>
              <th>UPC</th>
              <th>Акційний UPC</th>
              <th>Назва продукту</th>
              <th>Ціна</th>
              <th>Кількість</th>
              <th>Акційний</th>
              <th>Дії</th>
            </tr>
          </thead>

          <tbody class="table-group-divider">
            <tr>
              <td colspan="8">{{> partials/loading}}</td>
            </tr>
            <tr>
              <td colspan="8">{{> partials/loading}}</td>
            </tr>
            <tr>
              <td colspan="8">{{> partials/loading}}</td>
            </tr>
            <tr>
              <td colspan="8">{{> partials/loading}}</td>
            </tr>
            <tr>
              <td colspan="8">{{> partials/loading}}</td>
            </tr>
            <tr>
              <td colspan="8">{{> partials/loading}}</td>
            </tr>
            <tr>
              <td colspan="8">{{> partials/loading}}</td>
            </tr>
            <tr>
              <td colspan="8">{{> partials/loading}}</td>
            </tr>
            <tr>
              <td colspan="8">{{> partials/loading}}</td>
            </tr>
            <tr>
              <td colspan="8">{{> partials/loading}}</td>
            </tr>
          </tbody>
        </table>
      </div>

      <div class="mt-3">
        <nav aria-label="Table navigation">
          <ul class="pagination justify-content-center" >
            <li class="page-item">
              <a class="page-link">Минула</a>
            </li>
            <li class="page-item active" aria-current="page">
              <a class="page-link">1</a>
            </li>
            <li class="page-item">
              <a class="page-link">2</a>
            </li>
            <li class="page-item">
              <a class="page-link">3</a>
            </li>
            <li class="page-item">
              <a class="page-link">Наступна</a>
            </li>
          </ul>
        </nav>
      </div>

      <div class="row">
        <div class="col text-end">
          <button type="button" class="btn btn-outline-success w-25">
            Надрукувати звіт
          </button>
        </div>
      </div>

    </section>

    <template id="row-template">
      <tr>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
      </tr>
    </template>
  {{/inline}}
{{/layout}}